---
layout: page.njk
---

<main class="main">
  <a class="page__title" href="/"><h1>{{ data.title }}</h1></a>
  <a title="Go to main page" href="/" class="page__title__logo">
    <img alt="Krachbau Logo" src="/images/krachbau.svg">
  </a>
  <h2 class="page__subtitle_episode">{{ pageTitle }}</h2>
  <div class="article__audio">
  {% set audioUrl %}
    {{ data.paths.audio }}{{ page.fileSlug }}.mp3
  {% endset %}

    <audio src="{{ audioUrl | trim }}" controls></audio>
    <div>
    <a href="{{ audioUrl | trim }}" download="{{ page.fileSlug }}.mp3">
      Download episode
    </a>
    </div>
  </div>
  <div class="article__content">
    {{ content | safe }}
  </div>
  {% if chapters %}
  <div class="article__chapters">
    <h3>Chapters</h3>
      <ul>
        {%- for chapter in chapters -%}
          <li>{{ chapter.time }} {{ chapter.title }}</li>
        {%- endfor -%}
      </ul>
  </div>
  {% endif %}
</main>

